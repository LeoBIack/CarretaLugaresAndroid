<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ui.ContatoFragment">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagemContato"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

      <TextView
        android:id="@+id/linkFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Alterar a foto"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/imagemContato"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



<EditText
    android:id="@+id/editTextNomeL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nome de Referência"
    android:singleLine="true"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layout_constraintTop_toBottomOf="@+id/linkFoto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


<EditText
    android:id="@+id/editTextDescricaoL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Descrição"
    android:singleLine="true"
    android:maxLines="3"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layout_constraintTop_toBottomOf="@+id/editTextNomeL"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


    <Button
        android:id="@+id/buttonVoltarHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="11pt"
        android:onClick="voltarHome"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="190dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/borda_arredondada"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
    android:id="@+id/buttonSalvarL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Salvar"
    android:textSize="11pt"
    android:textColor="@color/colorAccent"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="186dp"
    android:layout_marginBottom="48dp"
    android:background="@drawable/borda_arredondada"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>